<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/iv_cropping_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="46dp"
        android:background="#446611"
        custom:cropBackgroundColor="#990000"
        custom:cropBorderCornerColor="#3300AA"
        custom:cropBorderCornerOffset="-2dp"
        custom:cropBorderCornerThickness="4dp"
        custom:cropBorderLineColor="#3300AA"
        custom:cropBorderLineThickness="2dp"
        custom:cropGuidelines="off"
        android:backgroundTint="@android:color/white"
        custom:cropGuidelinesColor="#3300AA"
        custom:cropShape="rectangle"/>

    <TextView
        android:id="@+id/btn_crop_reset"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="Crop"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>

</FrameLayout>